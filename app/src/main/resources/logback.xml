<configuration debug="true">
    <timestamp key="timestamp" datePattern="yyyyMMdd.HHmmss" />
    <appender name="ERROR_PAGE" class="com.iit.dashboard2022.logging.ErrorPageAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS} %level] [%logger{36}]: %message%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/data/data/com.iit.dashboard2022/logs/LOG-${timestamp}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/data/data/com.iit.dashboard2022/logs/LOG-%date{ISO8601}-%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>5MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS} %level] [%logger{36}]: %message%n</pattern>
        </encoder>
    </appender>
    <root level="debug">
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_PAGE"/>
    </root>
</configuration>
