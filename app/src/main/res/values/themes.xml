<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dashboard2022" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="rippleColor">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textColorSecondary">@color/midground</item>
        <item name="android:textColorHint">@color/midground</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Custom Attributes -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:minWidth">5dp</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- Widget Styles -->
        <item name="sideButtonStyle">@style/SideButton</item>
        <item name="sideToggleButtonStyle">@style/SideToggleButton</item>
        <item name="sideLabelStyle">@style/SideLabel</item>
        <item name="sideSwitchWidgetStyle">@style/SideSwitchWidget</item>
    </style>

</resources>